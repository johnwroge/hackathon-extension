{
  "manifest_version": 3,
  "name": "My Extension",
  "version": "1.0",
  "description": "A plain text description",
  "action": {
    "default_title": "Click Me",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "css": ["./scripts/content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
